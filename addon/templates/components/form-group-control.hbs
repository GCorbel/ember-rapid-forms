  {{yield}}
{{else}}
  {{#if controlWrapper}}
      <div class={{controlWrapper}}>
          {{#component mainComponent.htmlComponent mainComponent=mainComponent form=form}}
              {{yield}}
          {{/component}}
      </div>
  {{else}}
      {{#component mainComponent.htmlComponent mainComponent=mainComponent form=form}}
          {{yield}}
      {{/component}}
  {{/if}}
{{/if}}
