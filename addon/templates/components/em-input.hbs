{{#em-form-group model=model property=property label=label form=form
  elementClass=elementClass controlWrapper=controlWrapper labelClass=labelClass
  label=label yieldInLabel=yieldInLabel labelWrapperClass=labelWrapperClass
  help=help cid=id validationIcons=validationIcons canShowErrors=canShowErrors
  inputComponent=this}}
  {{input
    type=type

    placeholder=placeholder
    value=selectedValue
    name=name
    disabled=disabled
    class=(concat "form-control " elementClass)
    id=id
    required=required
    title=title
    pattern=pattern
    autofocus=autofocus
    readonly=readonly
    autoresize=autoresize
  }}
{{/em-form-group}}
